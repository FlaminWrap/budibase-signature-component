          {
            "label": "Dashed",
            "value": "dashed"
          },
          {
            "label": "Dotted",
            "value": "dotted"
          },
          {
            "label": "Double",
            "value": "double"
          },
          {
            "label": "Groove",
            "value": "groove"
          },
          {
            "label": "Inset",
            "value": "inset"
          },
          {
            "label": "None",
            "value": "none"
          },
          {
            "label": "Outset",
            "value": "outset"
          },
          {
            "label": "Ridge",
            "value": "ridge"
          },
          {
            "label": "Solid",
            "value": "solid"
          }
        ]
      },
      {
        "type": "text",
        "key": "borderColor",
        "label": "Border Colour",
        "defaultValue": "#000000"

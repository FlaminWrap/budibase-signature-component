    "icon": "AnnotatePen",
    "settings": [
      {
        "type": "field/string",
        "key": "field",
        "label": "Field",
        "required": true
      },
      {
        "type": "text",
        "key": "label",
        "label": "Label",
        "defaultValue": "Signature Field"
      },
      {
        "type": "text",
        "key": "width",
        "label": "Width",
        "defaultValue": "800px",
        "required": true

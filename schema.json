        "dependsOn": {
          "setting": "showClearSignatureButton",
          "value": true
        }
      },
      {
        "type": "text",
        "key": "modalActionButtonText",
        "label": "Clear Signature Dialog Modal Action Button Text",
        "defaultValue": "Erase",
        "dependsOn": {
          "setting": "showClearSignatureButton",
          "value": true
        }
      }
    ]
